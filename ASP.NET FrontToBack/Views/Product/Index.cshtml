@model List<Product>
@{
    ViewData["Title"] = "Index";
}


<section id="products">
    <input id="productCount" type="hidden" value="@ViewBag.ProductCount" />
    <div class="container">
        <div class="row" id="productList">
            @await Component.InvokeAsync("Product")
        </div>

        <div class="row justify-content-center">
            <button class="btn btn-primary" id="LoadMore">Load more</button>
        </div>
    </div>
</section>

